<shape xmlns:android="http://schemas.android.com/apk/res/android"   
    android:shape="rectangle">  
    <!-- 填充颜色 -->  
    <solid android:color="@color/transparent"></solid>
    <!-- 线的宽度，颜色灰色 -->  
    <stroke android:width="2dp" android:color="@color/blue"/>
